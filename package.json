{
    "name": "ksp",
    "displayName": "KONTAKT Script Processor (KSP)",
    "description": "Language support for NI KONTAKT Script Processor (KSP)",
    "version": "0.4.0-beta4",
    "publisher": "rkoubou",
    "license": "MIT",
    "keywords": [
        "KONTAKT",
        "KSP",
        "Native Instruments",
        "Computer Music",
        "DTM"
    ],
    "galleryBanner": {
        "color": "#3A3D40",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/r-koubou/vscode-ksp.git"
    },
    "icon": "images/icon.png",
    "main": "./out/src/KSPMain",
    "activationEvents": [
        "onLanguage:ksp",
        "onCommand:ksp.obfuscate"
    ],
    "engines": {
        "vscode": "^1.17.0"
    },
    "dependencies": {
        "tmp": "0.0.33",
        "vscode": "^1.1.0",
        "vscode-nls": "^3.2.1"
    },
    "devDependencies": {
        "@types/node": "^6.0.78"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Linters"
    ],
    "capabilities": {
        "documentSymbolProvider": "true"
    },
    "contributes": {
        "languages": [
            {
                "id": "ksp",
                "aliases": [
                    "KONTAKT Script (KSP)",
                    "ksp"
                ],
                "extensions": [
                    ".ksp",
                    ".txt"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "ksp",
                "scopeName": "net.rkoubou.kontakt.ksp",
                "path": "./syntaxes/ksp.json"
            }
        ],
        "snippets": [
            {
                "language": "ksp",
                "path": "./snippets/ksp.json"
            }
        ],
        "configuration": {
            "title": "%configuration.title%",
            "type": "object",
            "properties": {
                "ksp.java.location": {
                    "type": "string",
                    "default": null,
                    "description": "%configuration.java.location%"
                },
                "ksp.validate.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.validate.enable%"
                },
                "ksp.validate.realtime.enable": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.realtime.validate.enable%"
                },
                "ksp.validate.realtime.delay": {
                    "type": "number",
                    "default": 500,
                    "description": "%configuration.realtime.validate.delay%"
                },
                "ksp.validate.syntax.only": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.validate.syntax.only%"
                },
                "ksp.validate.strict": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.validate.strict%"
                },
                "ksp.validate.unused": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.validate.unused%"
                },
                "ksp.obfuscator.suffix": {
                    "type": "string",
                    "default": ".out.txt",
                    "description": "%configuration.obfuscator.suffix%"
                },
                "ksp.obfuscator.inline.function": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.obfuscator.inline.function%"
                }
            }
        },
        "commands": [
            {
                "command": "ksp.obfuscate",
                "title": "%command.obfuscate%"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    }
}
