{
    "name":         "kontakt-script-langage",
    "displayName":  "KONTAKT Script Language (KSP)",
    "description":  "NI KONTAKT Script language support",
    "version":      "0.0.5",
    "publisher":    "R-Koubou",
    "icon": "images/icon.png",
    "main": "./out/src/KSPMain",
    "activationEvents": [ "onLanguage:ksp" ],
    "engines":
    {
        "vscode":   "^1.10.0"
    },
    "categories":
    [
        "Languages",
        "Snippets"
    ],
    "contributes":
    {
        "languages":
        [{
            "id": "ksp",
            "aliases": [ "KONTAKT Script (KSP)", "ksp" ],
            "extensions": [ ".ksp", ".txt" ],
            "configuration": "./language-configuration.json"
        }],
        "grammars":
        [{
            "language": "ksp",
            "scopeName": "net.rkoubou.kontakt.ksp",
            "path": "./syntaxes/ksp.json"
        }],
        "snippets":
        [
            {
                "language": "ksp",
                "path": "./snippets/ksp.json"
            }
        ]
    },
    "scripts":
    {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies":
    {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
