{
    "comments":
    {
        "blockComment": [ "{", "}" ]
    },
    "brackets":
    [
        [ "[", "]" ],
        [ "(", ")" ]
    ],
    "autoClosingPairs":
	[
        { "open": "[", "close": "]", "notIn": [ "string"]  },
        { "open": "(", "close": ")", "notIn": [ "string"]  },
        { "open": "\"", "close": "\"", "notIn": ["string", "comment"] }
    ],
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
    ],
    "folding": {
        "markers": {
          "start": "^\\s*(on|function)\\s+\\b",
          "end": "^\\s*end\\s+(on|function)"
        }
    }
}
